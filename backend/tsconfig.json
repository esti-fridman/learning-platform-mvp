{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",

    "lib": ["ES2020"],
    "types": ["node"],

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": false
  },
  "include": ["src"]
}
